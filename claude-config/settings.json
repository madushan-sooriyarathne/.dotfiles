{
  "permissions": {
    "deny": [
      "Read(.git/**, .turbo/**, node_modules/**, **/.sanity/**, **/.turbo/**, **/node_modules/**, **/coverage/**, **/dist/**)"
    ]
  },
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Glass.aiff & say 'Task completed!'"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Sosumi.aiff & say 'Attention needed!'"
          }
        ]
      }
    ]
  },
  "alwaysThinkingEnabled": false
}
